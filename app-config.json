{
    "appName": "CDK lambda",
    "version": "1.0.0",
    "region": "ap-south-1",
    "stage": "local",
    "provider": "aws",
    "envFile": {
        "local": "../environment/.local.env",
        "dev": "../environment/.dev.env",
        "production": "../environment/.production.env"
    },
    "authorizer": [
        {
            "name": "custom-auth",
            "type": "restApi",     
            "function": {
                "name": "auth-${self.stage}",
                "runtime": "lambda.Runtime.NODEJS_22_X",
                "handler": "index.handler",
                "srcFile": "src/lambda-handler/course.ts",
                "output": "dist/course-handler/index.js",
                "memory": 256,
                "concurrency": 10,
                "timeout": 30,
                "environmentVariable": {
                    "MONGODB_URI": "localhost:db",
                    "frontendUrl": "${env.frontendUrl}",
                    "functionName": "${currentFunction.name}",
                    "cors": "${env.cors}"
                }
            }
        }
    ],
    "vpc": [
        {
            "name": "vpc-1"
        }
    ],
    "apiGateway": [
        {
            "name": "my-serverless-app-${self.stage}",
            "type": "http",
            "authenticationType": "custom",
            "cors": "${env.cors}"
        }
    ],
    "functions": [
        {
            "name": "course-${self.stage}",
            "runtime": "lambda.Runtime.NODEJS_22_X",
            "handler": "index.handler",
            "srcFile": "src/lambda-handler/course.ts",
            "output": "dist/course-handler/index.js",
            "authorizer": "custom-auth",
            "memory": 256,
            "concurrency": 10,
            "timeout": 30,
            "triggers": [
                {
                    "type": "http",
                    "endpoint": "course",
                    "method": "GET",
                    "responseType": "application/json",
                    "apiGatewayName": "my-serverless-app-${self.stage}"
                }
            ],
            "environmentVariable": {
                "MONGODB_URI": "localhost:db",
                "frontendUrl": "${env.frontendUrl}",
                "functionName": "${currentFunction.name}",
                "cors": "${env.cors}"
            }
        }
    ]
}